# JupyterLite Next.js Integration Environment Variables

# Base URL for JupyterLite assets (development)
JUPYTER_LITE_BASE_URL=http://localhost:8000

# WebSocket URL for kernel communication  
JUPYTER_LITE_WS_URL=ws://localhost:8000

# Production URLs (uncomment for production)
# JUPYTER_LITE_BASE_URL=https://your-domain.com
# JUPYTER_LITE_WS_URL=wss://your-domain.com

# Custom app configuration
NEXT_PUBLIC_APP_NAME=DataWars JupyterLite
NEXT_PUBLIC_APP_VERSION=0.7.0-alpha.1

# Storage configuration  
NEXT_PUBLIC_DEFAULT_STORAGE_NAME=DataWars-JupyterLite

# Feature flags
NEXT_PUBLIC_ENABLE_KERNEL_BRIDGE=true
NEXT_PUBLIC_SHOW_LOADING_INDICATOR=true

# Theme configuration
NEXT_PUBLIC_DEFAULT_THEME=auto

# Development flags
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_VERBOSE_LOGGING=false